         <h1>Welcome To YelpCamp!</h1>
        <a class="btn btn-lg btn-primary " href="/campground/new">Add new campground </a>
    </div>
</header>
<!-- xxx header ends xxxxx -->

<div class="row text-center" style="display:flex; flex-wrap:wrap;">
     <% campGrounds.forEach((camp)=>{ %>
         <div class="col-md-4 col-sm-12">
             
             <div class="thumbnail">
                 <img src= <%= camp.image %> >
                 <div class="caption">
                     <h4 ><%= camp.name %></h4>
                 </div>
             </div>
                    
         </div>
     <% });%>  <!-- Loops -->
</div>
 
